extends ../layout

block content

  .container
    .row
      .col-md-8.col-md-offset-2
        h2.title-focus ¿Qué tareas piensas hacer hoy?
        form.form-center(action="/tasks", name='checkListForm', method= 'POST')
          input.input-task(type='text', name='title', placeholder='Añade tareas...', autofocus)
          button#add.btn.btn-primary(type='submit')
            //- plus SVG
            svg(width='16' height='16' viewBox='0 0 16 16' xmlns='http://www.w3.org/2000/svg')
              path(fill='#fff' d='M8 1v6H2v2h6v6h2V9h6V7H10V1z')
        br
        br
        if (tasks.length === 0)
          p.no-tasks No hay tareas por realizar
        else 
          ul.list-unstyled.list-tasks
            each task in tasks
              li.list-group-item
                p.title-name #{task.title}
                p.creation-date Creado en #{moment(task.createdAt).format('YYYY/MM/DD HH:mm')}
                form.edit-form(action=`/task/${task._id}`)
                  input.input-lg.hidden.hid-input(name='edited-name', value=task.title)
                .contain
                  button.btn.btn-primary.edit(href=`/task/${task._id}`)
                    //- pencil SVG
                    svg(width='16' height='16' viewBox='0 0 16 16' xmlns='http://www.w3.org/2000/svg')
                      path(fill='#fff' d='M12.3 1.7l2 2c.4.4.4 1 0 1.4L6.7 13.7 3 14l.3-3.7L12.3 1.7zM14 2.6L13.4 2 12 3.4 12.6 4l1.4-1.4z')
                  button.btn.btn-danger.remove(href=`/task/${task._id}`)
                    //- trash SVG
                    svg(width='16' height='16' viewBox='0 0 16 16' xmlns='http://www.w3.org/2000/svg')
                      path(fill='#fff' d='M6 2h4l1 1h3v2H2V3h3l1-1zM3 6h10l-1 8H4L3 6z')
                  button.btn.btn-success.done(href=`/task/${task._id}`)
                    //- check SVG
                    svg(width='16' height='16' viewBox='0 0 16 16' xmlns='http://www.w3.org/2000/svg')
                      path(fill='#fff' d='M6 10.2L3.8 8l-1.1 1.1L6 12.4l8-8-1.1-1.1z')